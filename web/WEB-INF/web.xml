        <url-pattern>/ImageCodeJudgeAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginOutAction</servlet-name>
        <url-pattern>/LoginOutAction</url-pattern>
    </servlet-mapping>
