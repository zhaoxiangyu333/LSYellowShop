        <url-pattern>/UserIfExist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminInitAction</servlet-name>
        <url-pattern>/AdminInitAction</url-pattern>
    </servlet-mapping>
